---
# Cribl Edge outputs configuration
# Generated by Ansible - cribl_docker_stack role

outputs:
  splunk_hec:splunk_hec:
    id: splunk_hec
    type: splunk_hec
    disabled: false
    # NOTE: HTTP not HTTPS - Splunk VM uses HTTP for HEC
    url: "{{ cribl_docker_stack_hec_url }}/services/collector/event"
    token: "{{ cribl_docker_stack_hec_token }}"
    concurrency: 5
    maxPayloadSizeKB: 4096
    maxPayloadEvents: 0
    compress: true
    rejectUnauthorized: false
    timeoutSec: 30
    flushPeriodSec: 1
    useRoundRobinDns: false
    failedRequestLoggingMode: payload
    safeHeaders: []
    onBackpressure: block
    pqEnabled: true
    pqPath: "$CRIBL_HOME/state/queues"
    pqMaxFileSize: "1 GB"
    pqMaxSize: "5 GB"
    pqCompress: none
