---
# yamllint configuration compatible with ansible-lint
# See: https://ansible.readthedocs.io/projects/lint/rules/yaml/

extends: default

rules:
  line-length:
    max: 120
    level: warning
  indentation:
    spaces: 2
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
  # Required by ansible-lint
  comments-indentation: false
  comments:
    min-spaces-from-content: 1
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
